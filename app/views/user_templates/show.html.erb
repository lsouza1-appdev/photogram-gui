<h1><%=@user.username%><h1>

<dl>
  <dt>ID</dt>
  <dd> <%=@user.id%></dd>

<dt>Edit user</dt>
  <dd> form</dd>

</dl>

<h2>Own photos (<%= @user.own_photos.size %>) </h2>

<table border = "1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% @user.own_photos.each do |photo| %>
  <tr>
    <td><img src="<%=photo.image%>"></td>
    <td><%=photo.poster%></td>
    <td><%=photo.caption%></td>
    <td><%=photo.created_at%></td>
    <td></td>
  </tr>
<%end%>

</table>